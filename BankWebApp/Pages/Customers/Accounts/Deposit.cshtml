@page
@model BankWebApp.Pages.Customers.Accounts.DepositModel
@{
}

<section id="hero" class="hero section dark-background justify-content-start">

    <img class="backgroundImage" src="~/assets/img/hero-bg.jpg" alt="" data-aos="fade-in">

    <div class="container">
             

        <div class="container section-title mb-2" data-aos="fade-down">
            <span class="description-title">Deposit</span>
            <h2>Deposit</h2>
        </div>

        <div class="row justify-content-center">
            <div class="customer-container rounded">                

                <p class="mb-0">Account: @Model.AccountId</p>
                <p class="mb-2 border-bottom">Balance: @(Model.Balance)kr</p>

                <form method="post">
                    <input type="hidden" asp-for="@Model.AccountId" value="@Model.AccountId" />
                    <input type="hidden" asp-for="@Model.CustomerId" value="@Model.CustomerId" />
                    <input type="hidden" asp-for="@Model.Balance" value="@Model.Balance" />

                    <div class="from-group">
                        <label asp-for="@Model.Deposit">Amount</label>
                        <input asp-for="@Model.Deposit" class="form-control mb-2"/>
                        <span asp-validation-for="@Model.Deposit" class="text-danger"></span>
                    </div>


                    <input type="submit" class="btn btn-success mb-2" value="Deposit"/>
                    <a asp-page="/Customers/Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary mb-2">Back</a>
                </form>

                
                

                

            </div>
        </div>
        


    </div>


    
</section>


@section Scripts
                        {
    <partial name="Shared/_ValidationScriptsPartial" />
}