@page
@model BankWebApp.Pages.Customers.CreateModel
@{
}

<section id="hero" class="hero section dark-background">

    <img class="backgroundImage" src="~/assets/img/hero-bg.jpg" alt="" data-aos="fade-in">

    <div class="container section-title" data-aos="fade-down">
        <span class="description-title">Customer</span>
        <h2>Create</h2>
    </div>

    <div class="container d-flex justify-content-center customer-container w-75 p-4 rounded" data-aos="fade-down">
        <form method="post" class="w-100">
            
                <div class="form-container d-flex flex-column gap-2">
                    <div class="d-flex gap-2">
                        <input @* asp-for="@Model.Customer.GivenName" *@ class="form-control" />
                        <input @* asp-for="@Model.Customer.SurName" *@ class="form-control" />
                    </div>

                    <div class="d-flex gap-2">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" @* asp-for="@Model.Customer.Gender" *@ id="male" name="gender" value="Male" />
                            <label for="male" class="form-check-label">Male</label>
                        </div>

                        <div class="form-check">
                            <input type="radio" @* asp-for="@Model.Customer.Gender" *@ class="form-check-input" id="female" name="gender" value="Female" />
                            <label for="female" class="form-check-label">Female</label>
                        </div>

                    </div>

                    <input @* asp-for="@Model.Customer.Address" *@ class="form-control" />
                    <input @* asp-for="@Model.Customer.City"    *@ class="form-control" />
                    <input @* asp-for="@Model.Customer.Country" *@ class="form-control" />
                    <input type="submit" class="btn btn-success" value="Update">
                </div>

           
        </form>
    </div>

   

</section><!-- /Hero Section -->
