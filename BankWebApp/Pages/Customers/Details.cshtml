@page
@model BankWebApp.Pages.Customers.DetailsModel
@{
}

<section id="hero" class="hero section dark-background">
    <img class="backgroundImage blur" src="~/assets/img/hero-bg.jpg" alt="" data-aos="fade-in">

    <div class="container text-center" data-aos="fade-down" data-aos-delay="100">
        <div class="row justify-content-center">
            
                <div class="customer-container d-flex py-3 gap-5 justify-content-center rounded">
                    <div class="customer-information">
                        <img src="@Model.CustomerImageUrl" alt="Customer picture" class="rounded-circle mb-3"/>
                        <form method="get">                            
                            <div class="form-container d-flex flex-column gap-2">
                                <div class="d-flex gap-2">
                                    <input asp-for="@Model.Customer.GivenName" class="form-control" />
                                    <input asp-for="@Model.Customer.SurName" class="form-control" />
                                </div>

                                <div class="d-flex gap-2">
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" asp-for="@Model.Customer.Gender" id="male" name="gender" value="Male" />
                                        <label for="male" class="form-check-label">Male</label>
                                    </div>
                                    
                                    <div class="form-check">
                                        <input type="radio" asp-for="@Model.Customer.Gender" class="form-check-input" id="female" name="gender" value="Female" />
                                        <label for="female" class="form-check-label">Female</label>
                                    </div>
                                    
                                </div>

                                <input asp-for="@Model.Customer.Address" class="form-control" />
                                <input asp-for="@Model.Customer.City" class="form-control" />
                                <input asp-for="@Model.Customer.Country" class="form-control" />
                                <input type="submit" class="btn btn-success" value="Update">
                            </div>
                            
                        </form>
                    </div>




                    <div class="accounts-information">
                        <div class="container section-title" data-aos="fade-down">
                            <span class="description-title">Accounts</span>
                            <h2>Accounts</h2>
                        </div>

                    <div class="table-responsive">

                        <table class="table custom-table">
                            <thead>
                                <tr>

                                    <th scope="col">Id</th>
                                    <th scope="col">Balance</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var account in Model.Accounts)
                                {
                                    <tr>
                                        <td>ID</td>
                                        <td>@account.Balance</td>  
                                        <td>
                                            <div class="d-flex justify-content-end gap-2">
                                                <a>
                                                    <span class="customer-detail-link">
                                                        <i class="fa-solid fa-circle-user fa-xl"></i>
                                                    </span>
                                                </a>

                                                <a>
                                                    <span class="customer-detail-link">
                                                        <i class="fa-solid fa-circle-user fa-xl"></i>
                                                    </span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>ID</td>
                                        <td>@account.Balance</td>
                                        <td>
                                            <div class="d-flex justify-content-end gap-2 align-items-center">
                                                <a class="btn btn-success">Test</a>
                                                <a class="btn btn-success">Test</a>
                                            </div>
                                        </td>
                                    </tr>
                                }



                                
                            </tbody>
                        </table>
                    </div>










